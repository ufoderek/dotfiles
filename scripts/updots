## update

CONF_PATH=$HOME/dotfiles/configs

rm -rf ~/.gitconfig
cp $CONF_PATH/gitconfig ~/.gitconfig

rm -rf ~/.gittemplate
cp $CONF_PATH/gittemplate ~/.gittemplate

rm -rf ~/.gitignore
cp $CONF_PATH/gitignore ~/.gitignore

rm -rf ~/.git-completion.bash
cp $CONF_PATH/git-completion.bash ~/.git-completion.bash

rm -rf ~/.tmux.conf
cp $CONF_PATH/tmux.conf ~/.tmux.conf

rm -rf ~/.bashrc
cp $CONF_PATH/bashrc ~/.bashrc

rm -rf ~/.bash_aliases
cp $CONF_PATH/bash_aliases ~/.bash_aliases

rm -rf ~/.bash_profile
cp $CONF_PATH/bash_profile ~/.bash_profile

rm -rf ~/.bash_funcs
cp $CONF_PATH/bash_funcs ~/.bash_funcs

rm -rf ~/.inputrc
cp $CONF_PATH/inputrc ~/.inputrc

rm -rf ~/.xsession
cp $CONF_PATH/xsession ~/.xsession

rm -rf ~/.vimrc
cp $CONF_PATH/vimrc ~/.vimrc

rm -rf ~/.xsession
cp $CONF_PATH/xsession ~/.xsession
