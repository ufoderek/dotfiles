function is_buildfarm {
    local HOSTNAME=`hostname`
    if [[ "$HOSTNAME" == ws* ]]; then
        return 0 #success
    else
        return 1
    fi
}

#path (replace system defaults)
#mac
export PATH=/opt/local/bin:$PATH
export PATH=/opt/local/sbin:$PATH
export PATH=/opt/local/libexec/gnubin:$PATH
#linux
export PATH=$HOME/derek/toolchain/tmux-1.8-x86/bin:$PATH #newer than ubuntu 12.04
export PATH=$HOME/derek/toolchain/cppcheck-1.60.1:$PATH
export PATH=$HOME/derek/toolchain/qvim-20140109/bin:$PATH

#path (NOT replace system defaults)
