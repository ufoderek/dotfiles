if [ -f /etc/profile ]; then
	. /etc/profile
fi
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi
if [ -f $HOME/.bash_funcs ]; then
    . ~/.bash_funcs
fi

# path
export PATH=$PATH:$HOME/dotnvt/bin64
export PATH=$PATH:$HOME/dotfiles/scripts

if is_linux; then
    #for trash-cli
    export PATH=$PATH:$HOME/.local/bin
fi

if is_osx; then
    #for homebrew
    export PATH=/usr/local/sbin:$PATH
fi

# bash parameters
export HISTSIZE=100
export HISTFILESIZE=200000
export EDITOR=vim
export HISTCONTROL=erasedups
export HISTIGNORE='&:cd ~:cd ..:[bf]g:exit:h:history'
export PROMPT_COMMAND='history -a' #update history after each command

# tell AOSP lunch not to touch my PROMPT_COMMAND
export STAY_OFF_MY_LAWN=true

# load bashrc only for interactive shell
case "$-" in *i*) if [ -r ~/.bashrc ]; then . ~/.bashrc; fi;; esac

if is_nvt; then
	source ~/dotnvt/configs/bash_profile
fi
