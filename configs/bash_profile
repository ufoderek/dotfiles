else
    export PATH=$PATH:$HOME/derek/toolchain/adt-bundle-linux-x86_64-20130514/sdk/tools
    export PATH=$PATH:$HOME/derek/toolchain/adt-bundle-linux-x86_64-20130514/sdk/platform-tools
