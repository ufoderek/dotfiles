    #for Linux 64-bit
    export PATH=$PATH:/opt/arm/gcc-linaro-6.2.0-20161123-x86_64_aarch64-linux-gnu/bin
    #for xboot
    export PATH=$PATH:/opt/arm/gcc-linaro-arm-linux-gnueabihf-4.9-2014.08_linux/bin
    #for onboot
    export PATH=$PATH:/opt/arm/arm-v7a8v3r1-20121018/bin
    #for ss-linux
    #export PATH=$PATH:/opt/arm/tizen3.0_cross_toolchain_vd_jazzm_target_armv7l_host_x86-64_ga2.2016-09-21/bin
    #for eCos
    #export ECOS_REPOSITORY=~/wk/nvt-ecos/ecos-2.0.6/packages
    export PATH=$PATH:/opt/mips/mips-sde-lite/bin
    export PATH=$PATH:/opt/mips-sde-lite/bin
    export PATH=$PATH:/opt/mips/mipsel-24kv3r1-20121018/bin
    #for eCos: 568
    export PATH=$PATH:/opt/mips/VDLinux-mipsel-24kv3r0.20120412/bin
    #for nuttx
    export PATH=$PATH:~/dotfiles/bin64/kconfig-frontends/bin
