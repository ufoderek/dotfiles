if [ -r ~/.bash_funcs ]; then
    source ~/.bash_funcs
fi

# less
alias less="less -mRXF"

# fix for sudo auto completion and PATH
alias sudo='sudo -E env PATH=$PATH'

# diff
if command -v colordiff > /dev/null 2>&1; then
    alias diff='colordiff -r'
    alias diff2='colordiff -r --suppress-common-lines -y'
else
    alias diff='diff -r'
    alias diff2='diff -r --suppress-common-lines -y'
fi
alias more='less'
alias mkdir='mkdir -p -v'

# safty
alias cp='cp -i'
alias mv='mv -i'
if ! is_osx; then
    alias rm='rm -I'
else
    alias rm='rm -i'
fi

# error-proof
alias ..='cd ..'
alias cd..='cd ..'

# ls
alias la='ls -A'
alias ll='ls -alF'
if ! is_osx; then
    alias ls='ls -hF --color=always'
else
    alias ls='ls -hF -G'
fi
alias lr='ls -R'                    # recursive ls
alias lx='ll -BX'                   # sort by extension
alias lz='ll -rS'                   # sort by size
alias lt='ll -rt'                   # sort by date

# grep
alias grep='grep --exclude-dir=\.git --exclude-dir=\.repo --exclude-dir=\.svn --exclude-dir=out --color=always --binary-files=without-match'
alias grepc='grep --include="*.[c|h|cpp|cxx|hpp|s|S]"'

# reload bashrc
alias refresh='. ~/.bashrc'

# fix vim color issue inside tmux
#alias tmux='tmux -2'

# tmux shortcuts
alias td='tmuxd.sh'
alias tk='tmuxk.sh'
alias tl='tmuxl.sh'

# to lower process priority
if ! is_osx; then
    alias benice='nice -n19 ionice -c3'
else
    alias benice='nice -n19'
fi

# top
if ! is_osx; then
    alias top='top -u ufoderek'
else
    alias top='top -user ufoderek'
fi

# trash-cli
if ! is_osx; then
    alias trp='trash-put'
    alias trl='trash-list'
    alias tre='( benice trash-empty & ) > /dev/null 2>&1'
    alias trr='restore-trash'
else # is_osx
    alias trp='trash'
    alias trl='trash -l'
    alias tre='benice trash -e'
fi

# terminal notification
if is_linux; then
    alias kwarn='notify-send -u normal -i "dialog-warning" "Konsole" "Task completed"'
elif is_osx; then
    alias kwarn='terminal-notifier -title "iTerm" -message "Task Completed"'
fi

# local ccache for Android distribution
alias lccache="./prebuilts/misc/linux-x86/ccache/ccache"

# update package manager
if ! is_osx; then
    alias lupdate='sudo apt-get update && sudo apt-get dist-upgrade && sudo apt-get autoremove && sudo apt-get autoclean'
else
    alias lupdate='brew update && brew upgrade --all'
fi

# df
alias df='df -h'

# du
alias du='du -hd 1'

# find
alias ff='find . -name'
alias fd='find . -name -type d'

# cscope
alias csr='cscope -R'

# git
alias gs='git status'
alias gss='git status --untracked-files=no'
alias ga='git add'
alias gr='git reset'
alias grh='git reset --hard'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit'
alias gca='git commit -a'
alias gd='git diff'
alias gdc='git diff --cached'
alias go='git checkout'
alias gob='git checkout -b'
alias gcp='git cherry-pick'
alias gl='git log'
alias glp='git log -p'
alias glo='git log --oneline -10'
alias gwc='git whatchanged'
alias gcd='git clean -dfx'
alias gfa='git fetch -p --all'
alias grb='git rebase'
alias grbi='git rebase -i'
alias gpo='git push origin'
alias gpof='git push origin -f'

#misc
alias fda='dastyle.sh nt72*.c include/nt72*.h'
alias fdc='dcheckpatch.sh nt72*.c include/nt72*.h'
alias fga='git add nt72*.c include/nt72*.h'
alias elb='vim ~/dotfiles/scripts/lb'
