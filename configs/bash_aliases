if [ -r ~/.bash_funcs ]; then
    source ~/.bash_funcs
fi

# less
alias less="less -mRXF"

# fix for sudo auto completion and PATH
alias sudo='sudo -E env PATH=$PATH'

# diff
# alias diff='colordiff --exclude=\.git --exclude=\.repo --exclude=out'
if [ -r `which colordiff` ]; then
    alias diff='colordiff -r'
    alias diff2='colordiff -r --suppress-common-lines -y'
else
    alias diff='diff-r '
    alias diff2='diff -r --suppress-common-lines -y'
fi
alias more='less'
alias mkdir='mkdir -p -v'

# safty
alias cp='cp -i'
alias mv='mv -i'
if ! is_osx; then
    alias rm='rm -I'
else
    alias rm='rm -i'
fi

# error-proof
alias ..='cd ..'
alias cd..='cd ..'

# ls
alias la='ls -A'
alias ll='ls -alF'
if ! is_osx; then
    alias ls='ls -hF --color=always'
else
    alias ls='ls -hF -G'
fi
alias lr='ls -R'                    # recursive ls
alias lx='ll -BX'                   # sort by extension
alias lz='ll -rS'                   # sort by size
alias lt='ll -rt'                   # sort by date

# grep
alias grep='grep --exclude-dir=\.git --exclude-dir=\.repo --exclude-dir=out --color=always --binary-files=without-match'

# reload bashrc
alias refresh='. ~/.bashrc'

# fix vim color issue inside tmux
#alias tmux='tmux -2'

# tmux shortcuts
alias td='tmuxd.sh'
alias tk='tmuxk.sh'
alias tl='tmuxl.sh'

# to lower process priority
if ! is_osx; then
    alias benice='nice -n19 ionice -c3'
else
    alias benice='nice -n19'
fi

# top
if ! is_buildfarm; then
    if ! is_osx; then
        alias top='top -u ufoderek'
    else
        alias top='top -user ufoderek'
    fi
else
    alias top='top -u derek_liu'
fi

# remote command
if is_buildfarm; then
    alias rcmd='rcmd.sh'
fi

# trash-cli
if ! is_osx; then
    alias trp='trash-put'
    alias trl='trash-list'
    alias tre='( benice trash-empty & ) > /dev/null 2>&1'
    alias trr='restore-trash'
else # is_osx
    alias trp='trash'
    alias trl='trash -l'
    alias tre='benice trash -e'
fi

# Konsole
alias kwarn='notify-send -u normal -i "dialog-warning" "Konsole" "Task completed"'

# ssh
alias sshmatrix='ssh derek.liu@ad@matrix.acer.com.tw'
alias pmatrix='ssh -ND 8080 derek.liu@ad@matrix.acer.com.tw'
alias pub_pmatrix='ssh -ND `my_ip`:8080 derek.liu@ad@matrix.acer.com.tw'

# local ccache for Android distribution
alias lccache="./prebuilts/misc/linux-x86/ccache/ccache"

# update package manager
if ! is_osx; then
    alias lupdate='sudo apt-get update && sudo apt-get dist-upgrade && sudo apt-get autoremove && sudo apt-get autoclean'
else
    alias lupdate='brew update && brew upgrade --all'
fi

# df
alias df='df -h'

# du
alias du='du -sh'

# git
alias gs='git status'
alias ga='git add'
alias grh='git reset --hard'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit'
alias gca='git commit -a'
alias gd='git diff'
alias gdc='git diff --cached'
alias go='git checkout'
alias gob='git checkout -b'
alias gcp='git cherry-pick'
alias gl='git log'
alias glp='git log -p'
alias glo='git log --oneline -10'
alias gwc='git whatchanged'

# MTK
alias mke='./mk -o=TARGET_BUILD_VARIANT=eng'
alias mkud='./mk -o=TARGET_BUILD_VARIANT=userdebug'
alias mku='./mk -o=TARGET_BUILD_VARIANT=user'
alias mkee='./mk -o=TARGET_BUILD_VARIANT=eng mt6592lte_phone_fhd'
alias mkdd='./mk -o=TARGET_BUILD_VARIANT=userdebug mt6592lte_phone_fhd'
alias mkuu='./mk -o=TARGET_BUILD_VARIANT=user mt6592lte_phone_fhd'
alias mkl='./mk listp'
